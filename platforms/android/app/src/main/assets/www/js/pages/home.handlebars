<script type="text/javascript">
  //Movie carousel
  $(document).ready(function () {
    $('#carouselExampleControls').find('.carousel-item').first().addClass('active');
  });
  $(document).on('click', '.movie_pass', function () {
    var movie_name = $(this).attr("id");
    var movieId = $(this).data("movieid");
    var admin_id = $(this).data("admin_id");
    sessionStorage.setItem("movie_name", movie_name);
    sessionStorage.setItem("movieId", movieId);
    sessionStorage.setItem("admin_id", admin_id);
    $(location).attr("href", "#movie");
  });
</script>
