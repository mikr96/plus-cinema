<div id="carouselExampleControls" class="carousel slide" data-ride="carousel"
  style="width:80%; margin:auto; margin-top:20px;">
  <div class="carousel-inner">
    {{#each movie}}
      <div class="carousel-item">
        <img class="d-block w-100" src={{ img_source }} />
        <div class="carousel-caption" style="position: relative; bottom: 0; left:0; padding-top:10px;">
          <h5>{{ movie_name }}</h5>
          <div class="row">
            <div class="col-5" style="padding-right: 0px;">
              <button class="btn btn-info" id="movieDetails" data-toggle="modal"
                style="border-radius: 10em; float:right;" data-target="#displayMovieDetails{{id}}">
                Details
              </button>
            </div>
            <div class="col-7">
              <a class="btn btn-danger movie_pass" data-adminid={{ admin_id }} data-movieid={{ id }} id="{{movie_name}}"
                style=" border-radius: 10em; float:left;">
                Get Tickets!
              </a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

{{#each movie}}
  <!-- Modal for Movie Details -->
  <div class="modal fade" style="margin-top:150px;" id="displayMovieDetails{{id}}" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">{{ movie_name }}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <label for="recipient-name" class="col-form-label">Title: {{ movie_name }}</label>
          <label for="recipient-name" class="col-form-label">Genre: {{ genre }}</label>
          <label for="recipient-name" class="col-form-label">Language: {{ language }}</label>
          <label for="recipient-name" class="col-form-label">Subtitle: {{ subtitle }}</label>
          <label for="recipient-name" class="col-form-label">Synopsis: {{ synopsis }}</label>
        </div>
      </div>
    </div>
  </div>
{{/each}}

